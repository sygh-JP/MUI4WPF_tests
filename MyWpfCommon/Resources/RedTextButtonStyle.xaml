<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <!-- https://github.com/firstfloorsoftware/mui/wiki/Derive-from-MUI-styles -->
    <!-- Foreground を固定してしまうと、Disabled 状態でもラベル色が変わらないので、Style と Trigger を使う必要がある。 -->
    <Style x:Key="RedTextButtonStyleKey" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="True">
                <Setter Property="Foreground" Value="Crimson"/>
            </Trigger>
        </Style.Triggers>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
</ResourceDictionary>